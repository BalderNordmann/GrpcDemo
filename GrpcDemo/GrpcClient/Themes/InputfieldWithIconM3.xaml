<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GrpcClient.Themes">

    <!-- Farben / Brushes -->
    <SolidColorBrush x:Key="M3PrimaryBrush" Color="#6750A4"/>
    <SolidColorBrush x:Key="M3OutlineBrush" Color="#79747E"/>
    <SolidColorBrush x:Key="M3SurfaceBrush" Color="#FFFBFE"/>
    <SolidColorBrush x:Key="M3SurfaceVariantBrush" Color="#E7E0EC"/>

    <DropShadowEffect x:Key="M3Elevation1" BlurRadius="4" ShadowDepth="1" Opacity="0.1" Color="Black"/>

    <!-- Style -->
    <Style x:Key="InputfieldWithIconM3" TargetType="local:InputfieldWithIconM3">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:InputfieldWithIconM3">
                    <Border x:Name="Border"
                            Background="{StaticResource M3SurfaceVariantBrush}"
                            BorderBrush="{StaticResource M3OutlineBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            SnapsToDevicePixels="True"
                            Effect="{StaticResource M3Elevation1}">

                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Viewbox Width="20" Height="20" Margin="12,0,8,0" VerticalAlignment="Center">
                                <Path x:Name="IconPath" Data="{TemplateBinding IconImageData}" Fill="{StaticResource M3OutlineBrush}" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            </Viewbox>

                            <!-- Text -->
                            <ScrollViewer Grid.Column="1"
                                          Margin="0,4,12,4"
                                          x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource M3PrimaryBrush}"/>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource M3SurfaceBrush}"/>
                            <Setter TargetName="IconPath" Property="Opacity" Value="1.0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
